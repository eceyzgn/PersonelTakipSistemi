@model PersonelTakipSistemi.Models.Employee

@{
    ViewData["Title"] = "NewEmployee";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />
<form class="form-group" method="post">
    <b>TC Kimlik no</b>
    @Html.TextBoxFor(x => x.TC, new { @class = "form-control" })
    <br />
    <b>Ad</b>
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    <b>Soyad</b>
    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    <br />
    <b>Doğum Tarihi</b>
    @Html.TextBoxFor(x => x.DogumTarihi, new {@type="date", @class = "form-control datepicker" })
    <br />
    <b>Doğum Yeri</b>
    @Html.TextBoxFor(x => x.DogumYeri, new { @class = "form-control" })
    <br />
    <b>Adres</b>
    @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
    <br />
    <b>Telefon</b>
    @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
    <br />
    <b>Öğrenim Durumu</b>
    @Html.TextBoxFor(x => x.OgrenimDurumu, new { @class = "form-control" })
    <br />
    <b>Departman</b>
    @Html.DropDownListFor(x => x.Departman.DepartmanId, (List<SelectListItem>)ViewBag.degerler, new { @class = "form-control" })
    <br />

    <button class="btn btn-info"> Personel Ekle </button>
</form>


